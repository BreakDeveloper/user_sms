<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/order_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_12"
        android:layout_marginTop="@dimen/padding_12"
        android:text="訂單ID：6969"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_12"
        android:layout_marginTop="@dimen/padding_12"
        android:text="時間：09/15 22:15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/order_id" />

    <TextView
        android:id="@+id/bank_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_12"
        android:layout_marginTop="@dimen/padding_12"
        android:text="收款銀行：光大銀行"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/date" />

    <TextView
        android:id="@+id/bank_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_12"
        android:layout_marginTop="@dimen/padding_12"
        android:text="收款帳號：123456789"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bank_name" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="end"
        app:constraint_referenced_ids="order_id,date,bank_name,bank_account" />

    <TextView
        android:id="@+id/currency_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_12"
        android:layout_marginTop="@dimen/padding_12"
        android:text="付款金額(CNY)"
        app:layout_constraintStart_toEndOf="@+id/barrier1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/currency_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_12"
        android:text="15000.55"
        app:layout_constraintStart_toStartOf="@+id/currency_type"
        app:layout_constraintTop_toBottomOf="@+id/currency_type" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_12"
        android:text="收款戶名：張大大"
        app:layout_constraintStart_toStartOf="@+id/currency_type"
        app:layout_constraintTop_toBottomOf="@+id/currency_value" />

    <TextView
        android:id="@+id/prove1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_12"
        android:background="@drawable/bg_aqua_radius_3"
        android:paddingStart="@dimen/padding_12"
        android:paddingTop="@dimen/padding_4"
        android:paddingEnd="@dimen/padding_12"
        android:paddingBottom="@dimen/padding_4"
        android:text="證明"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/currency_type"
        app:layout_constraintTop_toBottomOf="@+id/user_name" />

    <TextView
        android:id="@+id/prove2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_12"
        android:layout_marginTop="@dimen/padding_12"
        android:background="@drawable/bg_aqua_radius_3"
        android:paddingStart="@dimen/padding_12"
        android:paddingTop="@dimen/padding_4"
        android:paddingEnd="@dimen/padding_12"
        android:paddingBottom="@dimen/padding_4"
        android:text="證明"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/prove1"
        app:layout_constraintTop_toBottomOf="@+id/user_name" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="end"
        app:constraint_referenced_ids="currency_type,currency_value,user_name,prove2" />

    <TextView
        android:id="@+id/pay_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_12"
        android:text="付款人"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/barrier2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pay_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_12"
        android:text="陳大大"
        app:layout_constraintStart_toStartOf="@+id/pay_user"
        app:layout_constraintTop_toBottomOf="@+id/pay_user" />

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_aqua_radius_3"
        android:text="確認收款"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/barrier2"
        app:layout_constraintTop_toBottomOf="@+id/pay_user_name" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_1"
        android:layout_marginTop="@dimen/padding_12"
        android:background="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/prove1" />

</androidx.constraintlayout.widget.ConstraintLayout>